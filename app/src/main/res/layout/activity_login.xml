<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.healthworker.LoginActivity" android:background="@android:color/white">

    <EditText
            android:layout_width="299dp"
            android:layout_height="43dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="176dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="E-mail"/>
    <EditText
            android:layout_width="299dp"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPassword" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editEmail" android:layout_marginStart="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="56dp" android:hint="Password"/>
    <Button
            android:text="Log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp"/>
    <TextView
            android:text="Not registered?"
            android:layout_width="97dp"
            android:layout_height="20dp"
            android:id="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="112dp" android:layout_marginStart="112dp"
            android:textColor="@android:color/black"/>
    <Button
            android:text="Sign Up"
            android:layout_width="82dp"
            android:layout_height="35dp"
            android:id="@+id/SignUp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp" android:layout_marginRight="108dp"
            android:shadowColor="@android:color/white" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            android:background="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>
